<!DOCTYPE html>
<html>
  <head>
    <title>DemoPostProject</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <% if user_signed_in? %>
        <li>
          <%= link_to('Logout', destroy_user_session_path, class: 'btn btn-danger', method: :delete) %>
          <%= link_to('New Post',  new_post_path, class: 'btn btn-info') %>
        </li>
      <% else %>
        <li>
          <%= link_to('Login', new_user_session_path, class: 'btn btn-info')  %> 
        </li>
        <li>
          <%= link_to('Create an account', new_user_registration_path, class: 'btn btn-primary')  %>
        </li>
      <% end %>
    <p class="notice"><%= notice %></p>
    <p class="alert"><%= alert %></p>
    <%= yield %>
  </body>
</html>
