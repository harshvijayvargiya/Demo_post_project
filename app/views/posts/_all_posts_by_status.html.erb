<table class="table table-hover">
  <thead>
    <div class="row">
      <tr>
        <th><div class="col-xs-6">Attachment</div></th>
        <th><div class="col-xs-12">Content</div></th>
        <th><div class="col-xs-12">Download</div></th>
        <th><div class="col-xs-12">Edit</div></th>
        <th><div class="col-xs-12">Destroy</div></th>        
        <th colspan="3"><div class="col-xs-10">Show</div></th>
      </tr>
    </div>
  </thead>
 
  <tbody>
    <% @posts.each do |post| %>
    <tr>
      <% if post.attachment_url   %>
        <td><%= image_tag post.attachment_url, class: "fix_image_size" %></td>
      <%else%>
        <td><%= image_tag 'image_not_found.png', class: "fix_image_size" %></td>
      <%end%>
      
      <td><b><%= post.content %></b></td>
      <% if post.attachment_url %>
        <td><%= link_to "Download" , download_file_posts_path(post), class: 'btn btn-primary'%></td>
      <%else%>
        <td><%= %></td>
      <%end%>

      <%if (user_signed_in? && (current_user.role == 'admin') || (current_user.id == post.user_id)) %>
        <td><%= link_to 'Edit', edit_post_path(post), class: 'btn btn-primary' %></td> |
        <td><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-primary' %></td>
      <% end %>


      <td><%= link_to 'Show', post, class: 'btn btn-primary' %>
        <% if post.comments.count != 0 %>
          <span class="badge"><%= post.comments.count %> </span>
        <% end %></a><br>
      </td>
    </tr>
    <% end %>
  </tbody>
</table>

<br>

<div>
  <%= link_to 'New Post', new_post_path, class: 'btn btn-primary' %>
</div>